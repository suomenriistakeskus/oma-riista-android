<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_secondary_color_pressed" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/button_primary_color_disabled" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/button_secondary_color" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
</selector>
