<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back_white"
        app:title="@string/filter_select_category" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/page_padding_horizontal"
        android:paddingRight="@dimen/page_padding_horizontal">

        <include
            android:id="@+id/filter_category_item1"
            layout="@layout/view_filter_category_item" />

        <View
            style="@style/HorizontalSeparator"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp" />

        <include
            android:id="@+id/filter_category_item2"
            layout="@layout/view_filter_category_item" />

        <View
            style="@style/HorizontalSeparator"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp" />

        <include
            android:id="@+id/filter_category_item3"
            layout="@layout/view_filter_category_item" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
