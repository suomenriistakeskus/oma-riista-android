<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/page_padding_top"
    android:layout_marginBottom="-10dp"
    android:paddingLeft="@dimen/page_padding_horizontal"
    android:paddingRight="@dimen/page_padding_horizontal">

    <TextView
        android:id="@+id/stats_category1_amount"
        style="@style/GameLogStatsAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/stats_category2_amount"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="120" />

    <View
        android:id="@+id/stats_category1_separator"
        style="@style/HorizontalSeparator"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/item_spacing_small"
        app:layout_constraintEnd_toEndOf="@id/stats_category1_amount"
        app:layout_constraintStart_toStartOf="@id/stats_category1_amount"
        app:layout_constraintTop_toBottomOf="@id/stats_category1_amount" />

    <TextView
        android:id="@+id/stats_category1_title"
        style="@style/GameLogStatsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/species_category_birds"
        app:layout_constraintEnd_toEndOf="@id/stats_category1_amount"
        app:layout_constraintStart_toStartOf="@id/stats_category1_amount"
        app:layout_constraintTop_toBottomOf="@id/stats_category1_separator" />

    <TextView
        android:id="@+id/stats_category2_amount"
        style="@style/GameLogStatsAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/stats_category3_amount"
        app:layout_constraintStart_toEndOf="@id/stats_category1_amount"
        app:layout_constraintTop_toTopOf="@id/stats_category1_amount"
        tools:text="5" />

    <View
        android:id="@+id/stats_category2_separator"
        style="@style/HorizontalSeparator"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/item_spacing_small"
        app:layout_constraintEnd_toEndOf="@id/stats_category2_amount"
        app:layout_constraintStart_toStartOf="@id/stats_category2_amount"
        app:layout_constraintTop_toBottomOf="@id/stats_category2_amount" />

    <TextView
        android:id="@+id/stats_category2_title"
        style="@style/GameLogStatsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/species_category_mammals"
        app:layout_constraintEnd_toEndOf="@id/stats_category2_amount"
        app:layout_constraintStart_toStartOf="@id/stats_category2_amount"
        app:layout_constraintTop_toBottomOf="@id/stats_category2_separator" />

    <TextView
        android:id="@+id/stats_category3_amount"
        style="@style/GameLogStatsAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/stats_category2_amount"
        app:layout_constraintTop_toTopOf="@id/stats_category2_amount"
        tools:text="0" />

    <View
        android:id="@+id/stats_category3_separator"
        style="@style/HorizontalSeparator"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/item_spacing_small"
        app:layout_constraintEnd_toEndOf="@id/stats_category3_amount"
        app:layout_constraintStart_toStartOf="@id/stats_category3_amount"
        app:layout_constraintTop_toBottomOf="@id/stats_category3_amount" />

    <TextView
        android:id="@+id/stats_category3_title"
        style="@style/GameLogStatsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/species_category_unprotected"
        app:layout_constraintEnd_toEndOf="@id/stats_category3_amount"
        app:layout_constraintStart_toStartOf="@id/stats_category3_amount"
        app:layout_constraintTop_toBottomOf="@id/stats_category3_separator" />

</androidx.constraintlayout.widget.ConstraintLayout>
