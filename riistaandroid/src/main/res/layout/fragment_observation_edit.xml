<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select_species"
        style="@style/SelectSpeciesButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/attach_image_button_size"
        android:layout_marginStart="@dimen/page_padding_horizontal"
        android:layout_marginTop="@dimen/item_spacing_normal"
        app:icon="@drawable/ic_species_observation"
        app:iconSize="@dimen/species_selection_icon_size"
        app:layout_constraintEnd_toStartOf="@id/edit_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Valkohäntäpeura"
        tools:enabled="true" />

    <LinearLayout
        android:id="@+id/edit_image_view"
        style="@style/SquareImageButton"
        android:layout_width="@dimen/attach_image_button_size"
        android:layout_height="@dimen/attach_image_button_size"
        android:layout_marginStart="@dimen/margin_between_species_and_image_selection"
        android:layout_marginEnd="@dimen/page_padding_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/btn_select_species"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_select_species"
        app:layout_constraintTop_toTopOf="@id/btn_select_species" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit_date"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="@dimen/item_spacing_semilarge"
        android:enabled="false"
        android:textSize="@dimen/date_time_text_size"
        android:letterSpacing="0.05"
        app:icon="@drawable/ic_calendar"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/item_spacing_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_select_species"
        tools:enabled="true"
        tools:text="12.8.2018" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit_time"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_spacing_normal"
        android:enabled="false"
        android:textSize="@dimen/date_time_text_size"
        android:letterSpacing="0.05"
        app:icon="@drawable/ic_clock"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/item_spacing_normal"
        app:layout_constraintBottom_toBottomOf="@id/btn_edit_date"
        app:layout_constraintStart_toEndOf="@id/btn_edit_date"
        app:layout_constraintTop_toTopOf="@id/btn_edit_date"
        tools:enabled="true"
        tools:text="13:32" />

    <LinearLayout
        android:id="@+id/layout_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/btn_edit_date">

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_observation_specimens"
        style="@style/PrimaryButton"
        android:layout_width="@dimen/specimen_button_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/page_padding_horizontal"
        android:layout_marginTop="@dimen/item_spacing_large"
        android:layout_marginEnd="@dimen/page_padding_horizontal"
        android:layout_marginBottom="@dimen/item_spacing_normal"
        android:text="@string/specimen_details"
        app:icon="@drawable/ic_list"
        app:iconTint="@color/onPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_details_container"
        app:layout_goneMarginBottom="0dp"
        app:layout_goneMarginTop="0dp" />

    <LinearLayout
        android:id="@+id/layout_details_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_spacing_large"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/btn_observation_specimens">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
