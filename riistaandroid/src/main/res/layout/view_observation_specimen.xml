<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/txt_specimen_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator"/>
    
    <LinearLayout
        android:id="@+id/layout_specimen_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/edit_choice_bg"
        android:padding="5dp">
        
        <ImageButton
            android:id="@+id/btn_specimen_male"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/ic_button_uros_active"
            android:background="@drawable/bg_toggle_button"/>
        
        <ImageButton
            android:id="@+id/btn_specimen_female"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_button_naaras_active"
            android:background="@drawable/bg_toggle_button"/>
        
        <ImageButton
            android:id="@+id/btn_specimen_unknown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_no_gender"
            android:background="@drawable/bg_toggle_button"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout_specimen_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
    </LinearLayout>

</LinearLayout>
