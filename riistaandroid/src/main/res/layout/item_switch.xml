<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/datafield_horizontal_margin"
    android:layout_marginEnd="@dimen/datafield_horizontal_margin">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchbox"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/HeaderText.Bold"
        tools:checked="true"
        tools:text="This is label" />

    <TextView
        android:id="@+id/tv_explanation"
        style="@style/TextBase"
        app:layout_constraintTop_toBottomOf="@id/switchbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_spacing_small"
        android:layout_marginRight="@dimen/item_spacing_small"
        tools:text="This is explanatory text" />

</androidx.constraintlayout.widget.ConstraintLayout>
